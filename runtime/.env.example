# Claude Code Sandbox Environment Configuration
# Copy this file to .env and fill in your values
# NOTE: .env is gitignored - your credentials stay local
# Clear ANTHROPIC_API_KEY to prevent host environment leak
ANTHROPIC_API_KEY=

# =============================================================================
# API CONFIGURATION (choose one option)
# =============================================================================

# Option 1: Direct Anthropic API
# ANTHROPIC_AUTH_TOKEN=sk-ai-v1-...
# ANTHROPIC_BASE_URL=https://zenmux.ai/api/anthropic
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Option 2: AWS Bedrock with Profile (uses ~/.aws/credentials)
# CLAUDE_CODE_USE_BEDROCK=1
# AWS_PROFILE=default
# AWS_REGION=us-east-1
# ANTHROPIC_MODEL=global.anthropic.claude-opus-4-5-20251101-v1:0

# Option 3: AWS Bedrock with Bearer Token
# CLAUDE_CODE_USE_BEDROCK=true
# AWS_BEARER_TOKEN_BEDROCK=ABSKQm...
# AWS_REGION=us-east-2
# ANTHROPIC_MODEL=global.anthropic.claude-opus-4-5-20251101-v1:0

# Option 4: LLM Gateway / Proxy (Custom Base URL)
ANTHROPIC_AUTH_TOKEN=sk-ai-v1-6...
ANTHROPIC_BASE_URL=https://zenmux.ai/api/anthropic
ANTHROPIC_MODEL=minimax/minimax-m2

# ANTHROPIC_MODEL=z-ai/glm-4.6

# ANTHROPIC_MODEL=moonshotai/kimi-k2-thinking
# =============================================================================
# OPTIONAL: Model Configuration
# =============================================================================

# Default models for Claude Code
# ANTHROPIC_DEFAULT_HAIKU_MODEL=minimax/minimax-m2
# ANTHROPIC_DEFAULT_OPUS_MODEL=minimax/minimax-m2
# ANTHROPIC_DEFAULT_SONNET_MODEL=minimax/minimax-m2

# ANTHROPIC_DEFAULT_HAIKU_MODEL=z-ai/glm-4.6
# ANTHROPIC_DEFAULT_OPUS_MODEL=z-ai/glm-4.6
# ANTHROPIC_DEFAULT_SONNET_MODEL=z-ai/glm-4.6

# ANTHROPIC_DEFAULT_HAIKU_MODEL=moonshotai/kimi-k2-thinking
# ANTHROPIC_DEFAULT_OPUS_MODEL=moonshotai/kimi-k2-thinking
# ANTHROPIC_DEFAULT_SONNET_MODEL=moonshotai/kimi-k2-thinking

# =============================================================================
# OPTIONAL: Claude Code Runtime Configuration
# =============================================================================

# Claude Code entrypoint (default: cli)
# CLAUDE_CODE_ENTRYPOINT=cli

# SSE port for Claude Code communication (default: random)
# CLAUDE_CODE_SSE_PORT=60568

# Path to Git bash (Windows only, for git operations)
# CLAUDE_CODE_GIT_BASH_PATH=C:\Program Files\Git\bin\bash.exe

# =============================================================================
# OPTIONAL: Git Identity
# =============================================================================
# GIT_AUTHOR_NAME=Your Name
# GIT_AUTHOR_EMAIL=you@example.com

